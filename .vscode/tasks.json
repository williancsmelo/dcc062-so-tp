{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "windows": {
        "command": [
          "rm build -r -ErrorAction:SilentlyContinue;",
          "mkdir build;",
          "cd build;",
          "gcc -c ../*.c;",
          "gcc *.o -o main;"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile and run",
      "type": "shell",
      "windows": {
        "command": [
          "rm build -r -ErrorAction:SilentlyContinue;",
          "mkdir build;",
          "cd build;",
          "gcc -c ../*.c;",
          "gcc *.o -o main;",
          "./main.exe"
        ]
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    }
  ]
}
